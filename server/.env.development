# Backend Environment Variables for Development
PORT=5000
NODE_ENV=development

# CORS Configuration - Allow frontend running on port 5173
CLIENT_URL=http://127.0.0.1:5173

# API Configuration
API_HOST=127.0.0.1
API_PORT=5000

# Firebase (if backend needs it)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_DATABASE_URL=your_firebase_database_url

# Gemini API (if used)
GEMINI_API_KEY=your_gemini_api_key

# FCM Configuration (if needed)
FCM_CREDENTIALS=your_fcm_credentials_json

# Logging
LOG_LEVEL=debug
